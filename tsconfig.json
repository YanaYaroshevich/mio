{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"module": "esnext",
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "es2015",
		"lib": ["es2018", "dom"],
		"paths": {
			"@shared/*": ["app/shared/*"],
			"@pages/*": ["app/pages/*"],
			"@store/*": ["app/store/*"],
			"@angular/*": ["../node_modules/@angular/*"]
		}
	},
	"angularCompilerOptions": {
		"fullTemplateTypeCheck": true,
		"strictInjectionParameters": true
	}
}
